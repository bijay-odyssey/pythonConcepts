class Animal:
    def speak(self):
        print("Animal makes a sound")

class Dog(Animal):
    def speak(self):
        print("Woof!")

class Cat(Animal):
    def speak(self):
        print("Meow!")

# Polymorphism in action
animals = [Dog(), Cat()]
for animal in animals:
    animal.speak()
    # Output: Woof! then Meow!
